{
  "name": "@aubaidfarrukh/smart-retry",
  "version": "1.0.0",
  "description": "Intelligent retry mechanism with exponential backoff, automatic failure logging, and replay support for HTTP requests",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "prepare": "husky",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "lint-staged": {
    ".ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "retry",
    "exponential-backoff",
    "http-retry",
    "axios-retry",
    "fetch-retry",
    "request-retry",
    "api-retry",
    "resilience",
    "fault-tolerance",
    "circuit-breaker",
    "error-handling",
    "network-retry",
    "transient-errors",
    "rate-limiting"
  ],
  "author": "Aubaid Farrukh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AubaidFarrukh/smart-retry.git"
  },
  "bugs": {
    "url": "https://github.com/AubaidFarrukh/smart-retry/issues"
  },
  "homepage": "https://github.com/AubaidFarrukh/smart-retry#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
